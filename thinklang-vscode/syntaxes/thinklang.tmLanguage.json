{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ThinkLang",
  "scopeName": "source.thinklang",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#annotations" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#declarations" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.thinklang",
          "match": "//.*$"
        },
        {
          "name": "comment.block.thinklang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.thinklang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.thinklang",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.thinklang",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.thinklang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.thinklang",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.thinklang",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "entity.name.tag.annotation.thinklang",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*\\([^)]*\\)"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.ai.thinklang",
          "match": "\\b(think|infer|reason)\\b"
        },
        {
          "name": "keyword.context.thinklang",
          "match": "\\b(with|without|context|guard|on_fail|retry|fallback|then|goal|steps)\\b"
        },
        {
          "name": "keyword.declaration.thinklang",
          "match": "\\b(type|fn|let)\\b"
        },
        {
          "name": "keyword.control.thinklang",
          "match": "\\b(match|try|catch|if|else)\\b"
        },
        {
          "name": "keyword.other.thinklang",
          "match": "\\b(print|uncertain|test|assert)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.pipeline.thinklang",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.arrow.thinklang",
          "match": "=>"
        },
        {
          "name": "keyword.operator.range.thinklang",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.comparison.thinklang",
          "match": ">=|<=|==|!=|>|<"
        },
        {
          "name": "keyword.operator.logical.thinklang",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.thinklang",
          "match": "[+\\-*/]"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.thinklang",
          "match": "\\b(string|int|float|bool)\\b"
        },
        {
          "name": "support.type.confident.thinklang",
          "match": "\\bConfident\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.thinklang",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.thinklang",
          "match": "\\bnull\\b"
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "match": "\\b(type)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.thinklang" },
            "2": { "name": "entity.name.type.thinklang" }
          }
        },
        {
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.thinklang" },
            "2": { "name": "entity.name.function.thinklang" }
          }
        }
      ]
    }
  }
}
