{
  "name": "thinklang-vscode",
  "displayName": "ThinkLang",
  "description": "Language support for ThinkLang â€” an AI-native programming language",
  "version": "0.1.0",
  "publisher": "thinklang",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Programming Languages"],
  "activationEvents": ["onLanguage:thinklang"],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "thinklang",
        "aliases": ["ThinkLang", "thinklang"],
        "extensions": [".tl"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "thinklang",
        "scopeName": "source.thinklang",
        "path": "./syntaxes/thinklang.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "thinklang",
        "path": "./snippets/thinklang.code-snippets"
      }
    ],
    "configuration": {
      "title": "ThinkLang",
      "properties": {
        "thinklang.lsp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the ThinkLang LSP server executable. Leave empty to use the bundled server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./tsconfig.json",
    "watch": "tsc -watch -p ./tsconfig.json",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.7.0"
  }
}
